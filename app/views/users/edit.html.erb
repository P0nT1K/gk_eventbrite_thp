<div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <br><br><br>
        <%= form_for @user,  url: user_path, html: { class: "form-signin mt-3" } do |f| %>
          <h1 class="h3 mb-3 font-weight-normal text-center">Mettre Ã  jour son profil</h1>
